+		else
+			hash_cfg &= ~TCPV4_VLAN_HASH_EN;
+		break;
+	case TCP_V6_FLOW:
+		switch (info->data & (RXH_L4_B_0_1 | RXH_L4_B_2_3)) {
+		case 0:
+			hash_cfg &= ~TCPV6_L4_HASH_EN;
