+				(unsigned)offset, end);
+			return -EINVAL;
+		}
+	}
+#endif /* CONFIG_CMD_SPI_BLOCK_PROTECTION */
+
+	mutex_lock(&host->lock);
+	while (length) {
+		if (spi->chipsize <= offset) {
+			offset -= spi->chipsize;
+			spi++;
+			if (!spi->name)
+				DBG_BUG("erase memory out of range.\n");
