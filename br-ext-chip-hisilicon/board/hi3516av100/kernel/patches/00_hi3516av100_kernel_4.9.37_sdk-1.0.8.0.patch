+{
+	hisi_sata_phy_reset();
+	msleep(20);
+	hisi_sata_reset();
+	msleep(20);
+	hisi_sata_clk_reset();
+	msleep(20);
+	hisi_sata_clk_disable();
+	hisi_sata_poweroff();
+	msleep(20);
+
