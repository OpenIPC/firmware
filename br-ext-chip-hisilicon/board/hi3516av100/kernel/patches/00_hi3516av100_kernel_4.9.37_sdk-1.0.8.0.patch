+	depctl.b.setd0pid = 1; 
+	DWC_WRITE_REG32(&dev_if->in_ep_regs[bulk_num]->diepctl, depctl.d32);
+	depctl.d32 = DWC_READ_REG32(&dev_if->in_ep_regs[3]->diepctl);
