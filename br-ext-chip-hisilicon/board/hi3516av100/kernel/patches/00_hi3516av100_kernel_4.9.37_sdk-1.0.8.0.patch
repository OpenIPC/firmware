+static void hisfc350_spi_nor_init(struct hisfc_host *host)
+{
+	clk_prepare_enable(host->clk);
+
+	hisfc_write(host, HISFC350_TIMING, HISFC350_TIMING_TCSS(0x6)
+			| HISFC350_TIMING_TCSH(0x6)
+			| HISFC350_TIMING_TSHSL(0xf));
+
+}
