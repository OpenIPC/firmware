+		if (hash_cfg & UDPV6_VLAN_HASH_EN)
+			info->data |= RXH_VLAN;
+		break;
+	case IPV4_FLOW:
+		if (hash_cfg & IPV4_L3_HASH_EN)
+			info->data |= RXH_IP_SRC | RXH_IP_DST;
+		if (hash_cfg & IPV4_VLAN_HASH_EN)
