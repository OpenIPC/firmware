+	regval = HINFC610_OP_CMD1_EN
+		 | HINFC610_OP_READ_DATA_EN
+		 | (((unsigned int)host->chipselect & HINFC610_OP_NF_CS_MASK)
+		    << HINFC610_OP_NF_CS_SHIFT);
