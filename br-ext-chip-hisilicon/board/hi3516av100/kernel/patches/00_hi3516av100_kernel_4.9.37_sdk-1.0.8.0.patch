+	tx_bq_rd_offset = readl(ld->gmac_iobase + TX_BQ_RD_ADDR);
+
+	return (tx_bq_rd_offset >> DESC_BYTE_SHIFT) + TX_DESC_NUM
+		- (tx_bq_wr_offset >> DESC_BYTE_SHIFT) - 1;
