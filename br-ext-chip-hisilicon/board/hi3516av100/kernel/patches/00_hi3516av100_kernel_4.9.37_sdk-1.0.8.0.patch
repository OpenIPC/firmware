+/*****************************************************************************/
+static int hisi_nand_os_remove(struct platform_device *pltdev)
+{
+	struct hifmc_host *host = platform_get_drvdata(pltdev);
+
+	clk_disable_unprepare(host->clk);
+	nand_release(host->mtd);
+
+	return 0;
+}
