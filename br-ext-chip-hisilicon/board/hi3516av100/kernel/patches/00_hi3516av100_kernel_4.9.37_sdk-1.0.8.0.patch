+static int higmac_init_sg_desc_queue(struct higmac_netdev_local *ld)
+{
+	ld->sg_count = ld->tx_bq.count + HIGMAC_SG_DESC_ADD;
+	if (HAS_CAP_CCI(ld->hw_cap)) {
