+	writel(scl_h, pinfo->regbase + I2C_SCL_H_REG);
+	writel(scl_l, pinfo->regbase + I2C_SCL_L_REG);
+
+	/* set hi_i2c hold time */
+	hold = scl_h / 2;
+	writel(hold, pinfo->regbase + I2C_SDA_HOLD_REG);
