+#define SPI_NOR_SR_TB_SHIFT	3
+#define SPI_NOR_SR_TB_MASK	(1 << SPI_NOR_SR_TB_SHIFT)
+
+#define SPI_NOR_SR_WIP_MASK	(1 << 0)
