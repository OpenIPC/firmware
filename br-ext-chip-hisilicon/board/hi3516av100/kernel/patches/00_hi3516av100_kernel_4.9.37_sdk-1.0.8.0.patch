+/*****************************************************************************/
+static char *int_to_size(unsigned long long size)
+{
+	int ix;
+	static char buffer[20];
+	char *fmt[] = {"%u", "%uK", "%uM", "%uG", "%uT", "%uT"};
+
+	for (ix = 0; (ix < 5) && !(size & 0x3FF) && size; ix++)
