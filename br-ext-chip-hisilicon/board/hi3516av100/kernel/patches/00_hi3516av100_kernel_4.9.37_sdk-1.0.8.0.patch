+
+/*****************************************************************************/
+#define HISNFC100_DMA_SADDR_D			0x40
+
+/*****************************************************************************/
+#define HISNFC100_DMA_SADDR_OOB			0x44
+
+/*****************************************************************************/
+#define HISNFC100_DMA_LEN			0x48
+#define HISNFC100_DMA_LEN_SET(_len)		((_len) & 0xfffffff)
+
+/*****************************************************************************/
+#define HISNFC100_STATUS			0x54
