+			hisfc350_dma_transfer(host, sfc_ft,
+				(unsigned char *)host->dma_buffer, sfc_rw,
+				sfc_num, spi->chipselect);
+		} else{
+			if (sfc_rw == READ)
+				host->wait_fg = SFC_WAIT_FLAG_R;
+			else if (sfc_rw == WRITE)
+				host->wait_fg = SFC_WAIT_FLAG_W;
+			wake_up(&host->intr_wait);
+		}
+	}
+	return IRQ_HANDLED;
+}
+#endif
