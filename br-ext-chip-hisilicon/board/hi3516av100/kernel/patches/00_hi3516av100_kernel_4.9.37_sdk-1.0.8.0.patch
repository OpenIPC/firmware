+/*****************************************************************************/
+struct hisfc_spi;
+
+struct spi_driver {
+	int (*wait_ready)(struct hisfc_spi *spi);
+	int (*write_enable)(struct hisfc_spi *spi);
+	int (*entry_4addr)(struct hisfc_spi *spi, int enable);
+	int (*bus_prepare)(struct hisfc_spi *spi, int op);
+	int (*qe_enable)(struct hisfc_spi *spi);
