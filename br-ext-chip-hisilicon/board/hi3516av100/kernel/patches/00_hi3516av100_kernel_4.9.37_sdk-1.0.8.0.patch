+static inline void hinfc610_detect_ecc(unsigned char ecc[], int begin,
+				       int end, unsigned int reg)
+{
+	while (begin < end) {
+		ecc[begin] = (reg & 0xff);
+		reg = (reg >> 8);
+		begin++;
+	}
