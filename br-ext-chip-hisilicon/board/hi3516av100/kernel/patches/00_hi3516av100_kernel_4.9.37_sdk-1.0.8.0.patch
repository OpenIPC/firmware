+	writel(micron_sync_param[1], host->chip->IO_ADDR_R);
+	hinfc_write(host, HINFC610_WRITE_0CMD_1ADD_DATA_SYNC, HINFC610_OP);
+	WAIT_CONTROLLER_FINISH();
