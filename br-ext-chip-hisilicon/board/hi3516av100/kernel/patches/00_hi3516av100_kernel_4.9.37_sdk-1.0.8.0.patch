+		if (higmac_wait_rss_ready(priv))
+			break;
+		writel(i, priv->gmac_iobase + RSS_IND_TBL);
+		if (higmac_wait_rss_ready(priv))
+			break;
+		rss_val = readl(priv->gmac_iobase + RSS_IND_TBL);
+		rss->ind_tbl[i] = (rss_val >> 10) & 0x3;
+	}
