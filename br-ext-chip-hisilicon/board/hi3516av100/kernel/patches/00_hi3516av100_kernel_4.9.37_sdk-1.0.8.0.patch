+static int higmac_wait_rss_ready(struct higmac_netdev_local *priv)
+{
+	void __iomem *base = priv->gmac_iobase;
+	int i, timeout = 10000;
+
+	for (i = 0; !(readl(base + RSS_IND_TBL) & BIT_IND_TBL_READY); i++) {
+		if (i == timeout) {
+			netdev_err(priv->netdev, "wait rss ready timeout!\n");
+			return -ETIMEDOUT;
+		}
+		usleep_range(10, 20);
+	}
+
+	return 0;
+}
