+static unsigned short hifmc100_read_word(struct mtd_info *mtd)
+{
+	struct nand_chip *chip = mtd_to_nand(mtd);
+	struct hifmc_host *host = chip->priv;
+
+	host->offset += 2;
+	return hifmc_readw(host->buffer + host->column + host->offset - 2);
+}
