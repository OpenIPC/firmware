+		} else if (ret_result == -DMAC_CHN_TIMEOUT) {
+			dma_err("Timeout.\n");
+			dmac_writew(dma_regbase + DMAC_CxCONFIG(channel), DMAC_CxDISABLE);
+			g_channel_status[channel] = DMAC_CHN_VACANCY;
+			ret = -1;
+			goto end;
