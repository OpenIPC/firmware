+/*****************************************************************************/
+static void hifmc100_ecc_err_num_count(struct mtd_info *mtd,
+			u_int ecc_st, u_int reg)
+{
+	u_char err_num;
+
+	if (ecc_st > 4)
+		ecc_st = 4;
+
+	while (ecc_st) {
+		err_num = GET_ECC_ERR_NUM(--ecc_st, reg);
+		if (err_num == 0xff)
+			mtd->ecc_stats.failed++;
+		else
+			mtd->ecc_stats.corrected += err_num;
+	}
+}
