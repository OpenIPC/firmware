#!/bin/sh

DAEMON="majestic"
PIDFILE="/var/run/$DAEMON.pid"
DAEMON_ARGS="-s"

[ -r "/etc/default/$DAEMON" ] && . "/etc/default/$DAEMON"

load_majestic() {
	printf 'Starting %s: ' "$DAEMON"
	[ -f $DAEMON_PATH/$DAEMON ] || echo -en "DISABLED, "

	[ -f /etc/coredump.conf ] && . /etc/coredump.conf
	if [ "$coredump_enabled" ]; then
		ulimit -c unlimited && echo "|/usr/sbin/sendcoredump.sh" >/proc/sys/kernel/core_pattern
	fi

	start-stop-daemon -b -m -S -q -p "$PIDFILE" -x "/usr/bin/$DAEMON" -- $DAEMON_ARGS
	status=$?
	if [ "$status" -eq 0 ]; then
		echo "OK"
	else
		echo "FAIL"
	fi
	return "$status"
}

start() {
	logger -s -p daemon.info -t $(ipcinfo -v) "Loading video system has started..."
	export SENSOR=$(fw_printenv -n sensor)
	load_majestic
}

stop() {
	printf 'Stopping %s: ' "$DAEMON"
	[ -f $DAEMON_PATH/$DAEMON ] || echo -en "DISABLED, "
	start-stop-daemon -K -q -p "$PIDFILE"
	status=$?
	if [ "$status" -eq 0 ]; then
		rm -f "$PIDFILE"
		echo "OK"
	else
		echo "FAIL"
	fi
	return "$status"
}

case "$1" in
	start|stop)
		"$1"
		;;

	restart)
		stop
		load_majestic
		;;

	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
		;;
esac
