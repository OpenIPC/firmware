#auto wlan0
iface wlan0 inet dhcp
    post-up wpa_passphrase "$(fw_printenv -n wlanssid || echo OpenIPC)" "$(fw_printenv -n wlanpass || echo password)" > /etc/wpa_supplicant.conf
    post-up sed -i '2i \\tscan_ssid=1' /etc/wpa_supplicant.conf
    post-up wpa_supplicant -B -i wlan0 -c /etc/wpa_supplicant.conf
    post-down killall -q wpa_supplicant
